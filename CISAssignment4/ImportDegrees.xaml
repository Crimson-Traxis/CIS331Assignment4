<Window x:Class="ImportDegrees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CISAssignment4"
        mc:Ignorable="d"
        Title="ImportDegrees" Height="300" Width="300" MinHeight="300" MinWidth="400" MaxWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20px" x:Name="rowProgressBar"/>
            <RowDefinition Height="40px"/>

        </Grid.RowDefinitions>
        <ListView x:Name="listViewDegrees" Grid.Row="0" Margin="5" HorizontalContentAlignment="Stretch" SelectionMode="Multiple">

        </ListView>
        <ProgressBar x:Name="progressBarProgress" IsIndeterminate="True" Margin="5" Grid.Row="1"/>
        <Button x:Name="buttonImport" VerticalAlignment="Center" Width="120" Height="35" Content="Import Selected" Grid.Row="2"/>
    </Grid>
</Window>
